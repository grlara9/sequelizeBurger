<div class="container">

    <div class="jumbotron">

        <h1>Eat-Da-Burger</h1>
        <h2>Make a Burger</h2>
        <div class="row">
            <div class="col-sm-4">
            <img src="/public/images/burger.jpg" alt="burger img">
    
        </div>
        <div class="col-sm-8">

        <panel>

            <form class="create-form">
                <div class="form-group">
                    <label for="newburger" id="color-override">Add A Burger:</label>
                    <input type="text" id="newburger" name="burger">
                    <button type="submit" class="btn btn-secondary" id="addburger">Add</button>
                </div>
            </form>

        </panel>
        </div>
    </div>
    </div>

    <div class="row">
    <!-- Undevoured Burgers -->
        <div class="col-sm-6">
            <div class="panel panel-default">
                <div class="panel-heading" id="lefthead">New Burgers</div>
                    <div class="panel-body">
                        <ul>
                            {{#each burgers}}
                            {{#unless devoured}}
                            <span><strong> {{this.id}} - {{this.burger_name}} </strong></span>
                            <button type="button" class="eatburger btn btn-warning" id ="eatbutton" data-id="{{this.id}}" data-newDevoured="{{devour}}">Devoured</button>
                           <hr>
                            {{/unless}}
                            {{/each}}
                        </ul>
                    </div>
                </div>
            </div>
        <!-- Devoured Burgers -->
        <div class="col-sm-6">
            <div class="panel panel-default">
                <div class="panel-heading" id="righthead"><strong>Devoured Burgers</strong></div>
                <div class="panel-body">
                    <ul>
                        {{#each burgers}}
                            {{#if devoured}}
                                <span><strong> {{this.id}} - {{this.burger_name}} </strong></span>
                            {{/if}}
                        {{/each}}
                    </ul>
                </div>
            </div>
        </div>
    </div>

</div>